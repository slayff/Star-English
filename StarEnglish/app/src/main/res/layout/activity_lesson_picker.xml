<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.slayff.starenglish.Activity.LessonPickerActivity"
    android:background="@drawable/gradient_1">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnametesting"
        android:id="@+id/bt_testing"
        android:layout_centerVertical="true"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnamecontent"
        android:id="@+id/bt_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/bt_testing"
        />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus rutrum pharetra purus ut facilisis."
        android:id="@+id/text_stat"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#B32400" />
</RelativeLayout>
