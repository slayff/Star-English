<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.slayff.starenglish.Activity.StatisticsActivity"
    android:background="@drawable/gradient_1">

    <TextView android:text="@string/hello_world" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_completed_les"
        android:textColor="#B32400"
        android:textSize="15dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_statistics"
        android:layout_below="@+id/text_completed_les"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:scrollingCache="true"
        android:cacheColorHint="@android:color/transparent"/>

</RelativeLayout>
